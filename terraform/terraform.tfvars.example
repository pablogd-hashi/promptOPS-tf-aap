# PromptOps Demo - Terraform Variables
#
# Copy this file to terraform.tfvars and fill in your values.
# Or let PromptOps generate it via the web UI.
#
# Note: Many values have platform constraints enforced by modules.
# The LLM is aware of these constraints and will refuse invalid requests.

# -----------------------------------------------------------------------------
# GCP Project (required)
# -----------------------------------------------------------------------------

project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# -----------------------------------------------------------------------------
# Compute (platform-constrained)
# -----------------------------------------------------------------------------

vm_count         = 1                 # ALLOWED: 1-10
instance_name    = "gpu-worker"      # Base name, suffixed with index if vm_count > 1
machine_type     = "n1-standard-4"   # ALLOWED: n1-standard-4, n1-standard-8
gpu_type         = "nvidia-tesla-t4" # ALLOWED: nvidia-tesla-t4 only
gpu_count        = 1                 # ALLOWED: 1-2
disk_size_gb     = 100               # ALLOWED: 50-200
enable_public_ip = true

# -----------------------------------------------------------------------------
# Network Policy (platform-constrained)
# -----------------------------------------------------------------------------

allow_ssh       = true   # Port 22 - required for Ansible
allow_streamlit = true   # Port 8501 - the ONLY app port available

# -----------------------------------------------------------------------------
# Encryption Policy
# -----------------------------------------------------------------------------

boot_disk_encrypted = false  # Enable CMEK encryption

# -----------------------------------------------------------------------------
# AAP Configuration (required)
# -----------------------------------------------------------------------------

aap_host            = "https://your-aap.example.com"
aap_username        = "admin"
aap_password        = "your-password"
aap_job_template_id = 42
ssh_user            = "ubuntu"

# -----------------------------------------------------------------------------
# Vault Configuration (required)
# -----------------------------------------------------------------------------

vault_addr      = "https://your-vault.example.com:8200"
vault_token     = "hvs.your-vault-token"
vault_namespace = "admin"  # Leave empty for OSS Vault
